<% content_for :title, t('messages.new.title') %>

<div class="row">
	<div class="large-6 small-12 columns">
		<h1 class="message_header"><%= @message.title %></h1>
		<div class="row">
			<div class="small-6 large-6 columns sub_header">
				<small><strong>
					Hier komt een plaatsnaam
				</strong></small>
			</div>
			<div class="small-6 large-6 columns sub_header">
				<small><strong>
					Hier komt een datum
				</strong></small>
			</div>
		</div>
		<p><%=@message.body%></p>
	</div>
	<div class="large-6 small-12 columns comment_wrapper">
		<h2>Comments</h2>
		<% @message.comments.each do |comment| %>
		  <p><%=comment.inspect%></p>
		<% end %>

		<h2>Add a comment:</h2>
		<%= form_for([@message, @message.comments.build]) do |f| %>
		    <%= f.text_area :body %>
		    <%= f.submit %>
		<% end %>
	</div>
</div>