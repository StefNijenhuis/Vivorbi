<div class="row">

  <!-- Input fields -->

	<div class="large-8 columns new_message_wrapper">

	<div class="row">
		
	<% content_for :title, t('messages.new.title') %>

	<%=form_for @message do |f| %>
	
	<div class="small-12 large-12 message_wrapper">

  <div class="row">
    <div class="small-12 large-12 columns">
      <h1 class="form_title" id="title_name"><%=t('.title')%></h1>
    </div>
  </div>

  <div class="row">
    <div id="request_form_name" class="small-12 large-12 columns">
    	<%=f.label :title %>
      	<%= f.text_field :title, placeholder:t('.title_placeholder'), title:t('.title_title') %>
    </div>
  </div>

   <div class="row">
    <div id="request_form_name" class="small-12 large-12 columns">
    	<%=f.label :body %>
      	<%= f.text_area :body, placeholder:t('.title_placeholder'), body:t('.title_title') %>
    </div>
  </div>

  <div class="row">
    <div class="small-2 columns">
      <%= f.submit @submit_text, class:"submit_button" %>
    </div>
  </div>

</div>

</div>

<% end %>

</div>

<!-- Hints -->

<div class="large-4 columns">

	<div class="large-12 hint_wrapper_1">
		<p><span class="hint">Hint</span> Lorem Ipsum is slechts een proeftekst uit het drukkerij- en zetterijwezen.</p>
		<span class="arrow">
			<span></span>
		</span>	
	</div>
	
</div>



