<div id="profile_overview">
  <div class="row">
    <div class="small-12 columns">
      <h1><%=t('.title')%></h1>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <h4><%=t('.name')%>:</h4>
      <%=@user.first_name%> <%=@user.in_between%> <%=@user.last_name%>
      <% unless params[:avatar_temp_name].blank? %>
      <br><img src="/avatars/tmp/<%=params[:avatar_temp_name]%>.tmp" width=50>
      <% end %>
    </div>
    <%
    @form_path = @base_form_path+'step_1'
    %>
    <%=render 'hidden_form'%>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <h4><%=t('.date_of_birth')%>:</h4>
      <%=l(@user.date_of_birth,format: :short_date) unless @user.date_of_birth == nil %>
    </div>
    <% @form_path = @base_form_path+'step_2' %>
    <%=render 'hidden_form'%>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <h4><%=t('.address')%>:</h4>
      <%=@user.street%> <%=@user.house_number%>, <%=@user.postal_code%> <%=@user.place%>
    </div>
    <% @form_path = @base_form_path+'step_3' %>
    <%=render 'hidden_form'%>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <h4><%=t('.contact_info')%>:</h4>
      <div><%=t('.phone')+": "+@user.phone unless @user.phone.blank? %></div>
      <div><%=t('.cell')+": "+@user.cellphone unless @user.cellphone.blank? %></div>
      <div><%=t('.email')+": "+@user.email unless @user.email.blank? %></div>
    </div>
    <% @form_path = @base_form_path+'step_4' %>
    <%=render 'hidden_form'%>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <h4><%=t('.hobbies')%>:</h4>
      <% unless @user.hobbies.blank? %>
        <%= @user.hobbies%>
      <% else %>
        <%=t('.no_hobbies')%>
      <% end %>
    </div>
    <% @form_path = @base_form_path+'step_5' %>
    <%=render 'hidden_form'%>
  </div>

  <%= form_for @user do |f| %>
    <%= f.hidden_field :first_name %>
    <%= f.hidden_field :in_between %>
    <%= f.hidden_field :last_name %>
    <%= f.hidden_field :street %>
    <%= f.hidden_field :house_number %>
    <%= f.hidden_field :postal_code %>
    <%= f.hidden_field :place %>
    <%= f.hidden_field :date_of_birth %>
    <%= f.hidden_field :phone %>
    <%= f.hidden_field :cellphone %>
    <%= f.hidden_field :email %>
    <%= f.hidden_field :hobbies %>
    <input type="hidden" name="avatar_temp_name" value="<%=params[:avatar_temp_name]%>">

    <div class="row">
      <div class="small-6 large-4 columns">
        <div class="prev"><%=t('global.back')%></div>
      </div>
      <div class="small-6 large-4 columns">
        <%= f.submit t('.submit'), :class => 'submit_button' %>
      </div>
    </div>
    <div class="row">
      <div class="small-12 columns" id="progress_bar">
        <span class="small-12 columns progress_text">
          <%=t('global.step',current:6,total:6)%>
        </span>
        <div class="small-2 columns done" id="first"></div>
        <div class="small-2 columns done"></div>
        <div class="small-2 columns done"></div>
        <div class="small-2 columns done"></div>
        <div class="small-2 columns done"></div>
        <div class="small-2 columns done end" id="last"></div>
      </div>
    </div>
  <% end %>
</div>