<h1>Wat vindt u leuk om te doen?</h1>
<%= form_for @user, url: '/users/'+@user.id.to_s+'/profile_overview' do |f| %>
	<%= f.text_area :hobbies, value: @user.hobbies %>
	

	<%= f.hidden_field :first_name, value: @user.first_name %>
	<%= f.hidden_field :in_between, value: @user.in_between %>
	<%= f.hidden_field :last_name, value: @user.last_name %>
	<%= f.hidden_field :has_avatar, value: @user.has_avatar %>
	<%= f.hidden_field :street, value: @user.street %>
	<%= f.hidden_field :house_number, value: @user.house_number %>
	<%= f.hidden_field :postal_code, value: @user.postal_code %>
	<%= f.hidden_field :place, value: @user.place %>
	<%= f.hidden_field :date_of_birth, value: @user.date_of_birth %>
	<%= f.hidden_field :phone, value: @user.phone %>
	<%= f.hidden_field :cellphone, value: @user.cellphone %>
	<%= f.hidden_field :email, value: @user.email %>
	<%= f.hidden_field :hobbies, value: @user.hobbies %>
	
	<%= f.submit %>
<% end %>