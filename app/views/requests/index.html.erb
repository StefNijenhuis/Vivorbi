    <div class="small-12 columns header">
      <h1><%=t('.title')%></h1>
      <p><%=t('.intro')%></p>
      <%=form_for @request, url:@form_path do |f| %>
        <%=f.hidden_field :title %>
        <%=f.submit id:'new_button' %>
      <% end %>
    </div>
    <div class="row" id="request_wrapper">
      <% @requests.each do |request| %>
      <div class="row" id="request">
        <div class="small-12 columns">
          <div class="large-6 small-12 columns" id="request_title">
            <h2><strong><%= request.title %></strong></h2>
          </div>
          <div class="large-6 small-12 end columns" id="request_date">
            <h2><%= l request.date, format: :medium %></h2>
          </div>
        </div>
        <div class="row" id="request_buttons">
          <a href="" class="large-6 small-6 columns">
            <div id="details_button">
              <%=t('.details')%>
            </div>
          </a>
          <a href="" class="large-6 small-6 columns">
            <div id="react_button">
              <%=t('.respond')%>
            </div>
          </a>
        </div>
      </div>
      <% end %>
    </div>