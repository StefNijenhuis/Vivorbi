		<div class="small-12 columns header">
			<h1>Hulpvraag overzicht</h1>
			<p>Hieronder ziet u het overzicht van de hulpvragen.
				Om in contact te komen klik op de reageeren knop.
			</p>
			<form action="/requests/new/step_1" method="post">
				<input type="hidden" name="request[title]" value="">
				<input type="submit" value="Nieuwe oproep" id="new_button">
			</form>
		</div>
		<div class="row" id="request_wrapper">
			<% @requests.each do |request| %>
			<div class="small-12 columns" id="request">
				<div class="small-6 columns" id="request_title">
				<h2><strong><%= request.title %></strong></h2>
				</div>
				<div class="small-6 columns" id="request_date">
				<h2><%= request.date.strftime("%A %e-%m-%Y") %></h2>
				</div>
				<div class="row" id="request_buttons">
					<a href="" class="small-6 columns">
						<div id="details_button">
							Details
						</div>
					</a>
					<a href="" class="small-6 columns">
						<div id="react_button">
							Reageren
						</div>
					</a>
				</div>
			</div>
			<% end %>
		</div>